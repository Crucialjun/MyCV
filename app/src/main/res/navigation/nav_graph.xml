<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.mycv.DashboardFragment"
        android:label="DashboardFragment" >
        <action
            android:id="@+id/action_dashboardFragment_to_experienceFragment"
            app:destination="@id/experienceFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_backgroundFragment"
            app:destination="@id/backgroundFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_intrestsFragment"
            app:destination="@id/intrestsFragment" />
    </fragment>
    <fragment
        android:id="@+id/experienceFragment"
        android:name="com.example.mycv.ExperienceFragment"
        android:label="fragment_experience"
        tools:layout="@layout/fragment_experience" />
    <fragment
        android:id="@+id/backgroundFragment"
        android:name="com.example.mycv.BackgroundFragment"
        android:label="fragment_background"
        tools:layout="@layout/fragment_background" />
    <fragment
        android:id="@+id/intrestsFragment"
        android:name="com.example.mycv.IntrestsFragment"
        android:label="fragment_intrests"
        tools:layout="@layout/fragment_intrests" />
</navigation>